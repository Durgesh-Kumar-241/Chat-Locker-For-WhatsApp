<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgound_activity"
    tools:context="com.dktechhub.applock.AppsFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <LinearLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/locked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Locked Apps"
                    android:textColor="#3949AB"

                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/l_loading"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="16dp"
                    android:background="@drawable/back_list_apps"
                    android:indeterminate="true"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/l_empty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_list_apps"
                    android:gravity="center"
                    android:padding="16dp"
                    android:elevation="16dp"
                    android:text="There is nothing here"
                    android:textColor="#039BE5"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/l_recycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_list_apps"
                    android:elevation="16dp"
                    tools:itemCount="4"
                    tools:listitem="@layout/fragment_home"
                    tools:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/recommended"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recommended Apps"
                    android:textColor="#3949AB"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ProgressBar

                    android:id="@+id/r_loading"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="16dp"
                    android:background="@drawable/back_list_apps"
                    android:indeterminate="true"
                    android:visibility="visible" />

                <TextView

                    android:id="@+id/r_empty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_list_apps"
                    android:gravity="center"
                    android:elevation="16dp"
                    android:padding="16dp"
                    android:text="There is nothing here"
                    android:textColor="#039BE5"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/r_recycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_list_apps"
                    android:elevation="16dp"
                    tools:itemCount="4"
                    tools:listitem="@layout/fragment_home"
                    tools:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Other Apps"
                    android:textColor="#3949AB"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ProgressBar

                    android:id="@+id/o_loading"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_list_apps"
                    android:indeterminate="true"
                    android:elevation="16dp"
                    android:visibility="visible" />

                <TextView

                    android:id="@+id/o_empty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_list_apps"
                    android:gravity="center"
                    android:padding="16dp"
                    android:elevation="16dp"
                    android:text="There is nothing here"
                    android:textColor="#039BE5"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/o_recycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_list_apps"
                    android:elevation="16dp"
                    tools:itemCount="4"
                    tools:listitem="@layout/fragment_home"
                    tools:visibility="gone" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>